includes:
    - phpstan-baseline.neon
    - phar://phpstan.phar/conf/bleedingEdge.neon
    - %HeyFrameRoot%/src/Core/DevOps/StaticAnalyze/PHPStan/extension.neon
    - %HeyFrameRoot%/src/Core/DevOps/StaticAnalyze/PHPStan/rules.neon

parameters:
    phpVersion: 80200
    level: 8
    tmpDir: var/cache/phpstan
    treatPhpDocTypesAsCertain: false
    checkFunctionNameCase: true
    checkInternalClassCaseSensitivity: true
    reportUnmatchedIgnoredErrors: true

    paths:
        - src
        - tests
    excludePaths:
        - src/Resources

    bootstrapFiles:
        - bin/static-analyze-autoloader.php

    symfony:
        constantHassers: false
        # the placeholder "%HeyFrameHashedCacheDir%" will be replaced on execution by bin/phpstan-config-generator.php script
        containerXmlPath: '../../..%HeyFrameHashedCacheDir%/%HeyFrameKernelClass%DevDebugContainer.xml'

    type_perfect:
        narrow_return: true
        no_mixed: true
        null_over_false: true

    ignoreErrors:

services:
    -   # register the class, so we can decorate it, but don't tag it as a rule, so only our decorator is used by PHPStan
        class: Symplify\PHPStanRules\Rules\NoReturnSetterMethodRule

rules:
    # HeyFrame core rules
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\Internal\InternalClassRule
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\Internal\InternalMethodRule
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\Tests\CoversAttributeRule
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\Tests\MockingSimpleObjectsNotAllowedRule
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\DecorationPatternRule
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\Migration\AddColumnRule
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\Migration\NoAfterStatementRule
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\NoNewRequestInFrontendRule

    # rules from https://github.com/symplify/phpstan-rules
    # domain
    - Symplify\PHPStanRules\Rules\Enum\RequireUniqueEnumConstantRule
    - Symplify\PHPStanRules\Rules\PreventParentMethodVisibilityOverrideRule

    # explicit naming
    - Symplify\PHPStanRules\Rules\ForbiddenMultipleClassLikeInOneFileRule

    - Symplify\PHPStanRules\Rules\Complexity\ForbiddenArrayMethodCallRule

    # complexity rules
    - Symplify\PHPStanRules\Rules\NoDynamicNameRule

    # naming rules
    - HeyFrame\Core\DevOps\StaticAnalyze\PHPStan\Rules\Symplify\NoReturnSetterMethodWithFluentSettersRule
    - Symplify\PHPStanRules\Rules\UppercaseConstantRule
